CC = gcc
SRC = holberton.c main.c
OBJ = $(SRC:.c=.o)
NAME = holberton
RM = rm -rf
CFLAGS = -Wall -Werror -Wextra -pedantic
all: $(OBJ) $(SRC)
        $(CC) $(CFLAGS) $(OBJ) -o $(NAME)

clean:
        $(RM) *~
        $(RM) $(NAME)

oclean:
        $(RM) $(OBJ)

fclean: clean oclean


re: all oclean
